void solve(){
    string s;cin>>s;
    int n=s.size(),ans=0;
    for(int i=0;i<n;){
        int c=0;
        char x=s[i];
        while(x==s[i] && i<n){c++;i++;}
        ans=max(ans,c);
    }cout<<ans;
}
