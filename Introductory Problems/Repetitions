void solve(){
string s;cin>>s;
int mx=INT_MIN,n=s.size();
for(int i=0;i<n;i++){
    int ans=1;
    while(s[i]==s[i+1] && i+1<n){
        ans++;
        i++;
    }
    mx=max(ans,mx);
}
cout<<mx;


}
