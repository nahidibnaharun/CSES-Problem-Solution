#include<bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
// const int INF=500;
const ll INF = 2e5+5;
/*
//      _   __  ___  __   __ _______ _______
//     / | / / / _ \ \ \__\ \\__  __\\  __  \ 
//    /  |/ / / /_\ \ \  ___ \  \ \   \ \ \  \ 
//   / /|  / / ____  \ \ \  \ \ _\ \___\ \/  /
//  /_/ |_/ /_/    \__\ \_\  \_\\______\\___/

ID: mdnahidibnaharun
LANG: C++
TASK: practice 
*/
void solve(){
    ll x,y;cin>>x>>y;
    if(x==y)cout<<x*y-(x-1);
    else if(x>y){
        if(x%2==0)cout<<x*x-y+1;
        else cout<<(x-1)*(x-1)+y;
    }
    else{
        if(y%2==0)cout<<(y-1)*(y-1)+x;
        else cout<<y*y-x+1;
    }
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }    
return 0;
}
