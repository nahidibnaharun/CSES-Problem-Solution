void solve(){
    int n;ll x=0;cin>>n;vector<ll>a(n);for(auto &x:a)cin>>x;
    for(int i=0;i<n-1;i++){
        if(a[i]>a[i+1]){
            ll d=a[i]-a[i+1];
            a[i+1]+=d;
            a[i]-=d;
            x+=d;
        }
    }cout<<x;
}
