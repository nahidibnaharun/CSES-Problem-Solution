void solve(){
int n;cin>>n;
vector<ll>a(n);
for(auto &x:a)cin>>x;
ll ans=0;
for(int i=1;i<n;i++){
    if(a[i]<a[i-1]){
        ans+=a[i-1]-a[i];
        a[i]=a[i-1];
    }
}
cout<<ans;


}
