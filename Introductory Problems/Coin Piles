void solve(){
    ll a,b;cin>>a>>b;
   if((a+b)%3==0 && 2*min(a,b)>=max(a,b))cout<<"YES";
   else cout<<"NO";
}
int main(){
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;cin>>t;
    while(t--){
        solve();
        cout<<endl;
    }    
return 0;
